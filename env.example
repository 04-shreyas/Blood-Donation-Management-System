# Blood Donation Management System - Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=mysql://username:password@localhost/blood_donation

# Alternative database configurations:
# SQLite: sqlite:///blood_donation.db
# PostgreSQL: postgresql://username:password@localhost/blood_donation
# MySQL: mysql://username:password@localhost/blood_donation

# Security Settings
CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# Application Settings
APP_NAME=Blood Donation Management System
APP_VERSION=2.0.0
ADMIN_EMAIL=admin@blooddonation.com

# Optional: Email Configuration (for future features)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379/0

# Optional: Logging Configuration
# LOG_LEVEL=INFO
# LOG_FILE=logs/app.log
